{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "address": {
        "type": "string"
      },
      "location": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "lon": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          }
        },
        "required": [
          "lat",
          "lon"
        ]
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "phone": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri-template"
            }
          },
          "required": [
            "name",
            "url"
          ]
        }
      },
      "logo": {
        "type": "string",
        "format": "uri-template"
      },
      "images": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri-template"
            },
            "alt": {
              "type": "string"
            }
          },
          "required": [
            "url",
            "alt"
          ]
        }
      }
    },
    "required": [
      "name",
      "id",
      "address",
      "location",
      "email",
      "phone",
      "description",
      "links",
      "logo",
      "images"
    ]
  }
}